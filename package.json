{
  "name": "resumeyer",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dev": "concurrently \"webpack --config webpack.config.js --watch\" \"wait-on dist/main.js dist/renderer.js && electron .\"",
    "build": "webpack --config webpack.config.js",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "make-exe": "npm run build && electron-builder --win --x64"
  },
  "keywords": [],
  "author": "Soham Chousalkar",
  "license": "MIT",
  "description": "Automatically tailor resumes and cover letters based on job descriptions using local LLMs",
  "build": {
    "appId": "com.soham.resumeyer",
    "productName": "Resumeyer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "app/assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "extraResources": [
      {
        "from": "resources",
        "to": "resources"
      }
    ]
  },
  "dependencies": {
    "@tiptap/extension-document": "^3.2.0",
    "@tiptap/extension-paragraph": "^3.2.0",
    "@tiptap/extension-text": "^3.2.0",
    "@tiptap/pm": "^3.2.0",
    "@tiptap/react": "^3.2.0",
    "@tiptap/starter-kit": "^3.2.0",
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "docx": "^9.5.1",
    "electron": "^37.3.0",
    "html-to-pdfmake": "^2.5.30",
    "jspdf": "^3.0.1",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^3.11.174",
    "pdfmake": "^0.2.20",
    "puppeteer": "^24.16.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-zoom-pan-pinch": "^3.7.0",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "css-loader": "^7.1.2",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.4",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "wait-on": "^8.0.4",
    "webpack": "^5.101.2",
    "webpack-cli": "^6.0.1"
  }
}
