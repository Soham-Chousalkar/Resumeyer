{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./app",
        "sourceMap": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types",
            "./app/types"
        ]
    },
    "include": [
        "app/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}